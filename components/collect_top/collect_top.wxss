/* components/collect_top.wxss */
.top{
  width: 100%;
	height: 521rpx;
	background-color: #4284f7;
  padding:0 32rpx;
}
.top .box{
  display: flex;
}
.top .box .item{
  flex: 1;
}
.top .box .item.one{
  border-right: 1rpx solid #8eb5fa;
}
.top .box .item .center{
  display: block;
  margin: auto;
  width:200rpx;
}
.left{
  float: left;
  margin-right: 24rpx;
}
.item .text{
  font-size: 22rpx;
	line-height: 42rpx;
	letter-spacing: 0px;
	color: #ffffff;
  display: block;
  text-align: center;
}
.item .num{
  font-size: 40rpx;
	line-height: 42rpx;
	letter-spacing: 0px;
	color: #ffffff;
  font-weight: bold;
  text-align: center;
  display: block;
}
.top .box .item .add-btn{
  width: 32rpx;
	height: 32rpx;
  margin-top: 50rpx;
}
.edit-alt {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 9999999999;
}
.rename-alt{
  position: absolute;
  width: 620rpx;
	height: 310rpx;
	background-color: #ffffff;
  left: 50%;
  margin-left: -310rpx;
  top: 50%;
  margin-top: -155rpx;
}
.rename-alt .btn-cont{
  position: absolute;
  bottom: 0;
  width: 100%;
  border-top: 1rpx solid #ebebeb;
  height: 88rpx;
}
.rename-alt .btn-cont .btn{
  width: 50%;
  font-size: 28rpx;
	color: #4284f7;
  line-height: 88rpx;
  text-align: center;
  float: left;
}
.rename-alt .btn-cont .btn.cancel{
  border-right: 1rpx solid #ebebeb;
}
.rename-alt .title{
  display: block;
  font-size: 30rpx;
	color: #333333;
  padding: 40rpx 0;
  text-align: center;
  font-weight: bold;
}
.rename-alt .inp{
  width: 556rpx;
	height: 72rpx;
	background-color: #f4f4f4;
  margin: auto;
  display: block;
  font-size: 28rpx;
	color: #333333;
  padding: 0 24rpx;
  box-sizing: border-box;
}