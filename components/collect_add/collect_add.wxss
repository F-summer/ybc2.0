/* components/collect_add/collect_add.wxss */

.collect-add {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 99999;
}

.collect-add .box {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 461rpx;
  background-color: #fff;
  border-radius: 32rpx 32rpx 0px 0px;
  overflow: hidden;
  padding: 40rpx 0 32rpx 0;
}

.collect-add .box .title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  display: block;
  text-align: center;
}

.collect-add .box .cancel {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  width: 80rpx;
  height: 100rpx;
}

.collect-add .box .cancel-img {
  position: absolute;
  top: 40rpx;
  right: 32rpx;
  width: 30rpx;
  height: 30rpx;
}

.collect-add .box .file-cont {
  width: 100%;
  padding: 40rpx 32rpx;
  white-space: nowrap;
}

.collect-add .box .file-cont .item {
  position: relative;
  width: 159rpx;
  height: 217rpx;
  background-color: #f8f8f8;
  display: inline-block;
  margin-right: 15rpx;
  overflow: hidden;
  padding: 24rpx 10rpx;
  border-radius: 16rpx;
}

.collect-add .box .file-cont .item .add-img {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 20rpx;
  height: 20rpx;
}

.collect-add .box .file-cont .item .file-img {
  width: 110rpx;
  height: 96rpx;
  display: block;
  margin: auto;
  margin-bottom: 18rpx;
}

.collect-add .box .file-cont .item .name {
  display: block;
  font-size: 24rpx;
  color: #333;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

.collect-add .box .file-cont .item .num {
  display: block;
  font-size: 22rpx;
  color: #4284f7;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  margin-top: 10rpx;
}

.collect-add .box .add-file {
  padding: 0 32rpx;
  overflow: hidden;
}

.collect-add .box .add-file .inp {
  max-width: 66%;
  min-width: 66%;
  height: 64rpx;
  background-color: #f4f4f4;
  font-size: 30rpx;
  color: #333;
  padding-left: 25rpx;
  display: inline-block;
  float: left;
  border-radius: 16rpx;
}

button::after {
  border: none;
}

.collect-add .box .add-file .add-btn {
  float: right;
  height: 64rpx;
  background-color: #4284f7;
  font-size: 30rpx;
  color: #fff;
  line-height: 64rpx;
  border-radius: 16rpx;
  display: inline-block;
  margin-left: 16rpx;
}
