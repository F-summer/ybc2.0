/* pages/subscription_edit/subscription_edit.wxss */
.content {
  padding: 40rpx 32rpx;
}

.content .name {
  font-size: 34rpx;
  color: #333333;
  display: block;
  margin-bottom: 40rpx;
}

.content .info-cont {
  font-size: 0;
  margin-right: -34rpx;
  margin-bottom: 62rpx;
}

.content .info-cont .itemed {
  font-size: 28rpx;
  color: #333333;
  width: 152rpx;
  text-align: center;
  height: 68rpx;
  background-color: #f4f4f4;
  line-height: 68rpx;
  display: inline-block;
  position: relative;
  margin-right: 24rpx;
  margin-bottom: 24rpx;
}

.content .info-cont .itemed.normal {
  color: #999999;
}
.content .info-cont .itemed.hover-border{
  border:1rpx solid #4284f7;
}
.content .info-cont .itemed.normal .del {
  display: none;
}

.content .info-cont .itemed .del {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  top: -14rpx;
  right: -7rpx;
}

.content .add-cont-info {
  font-size: 0;
  margin-right: -56rpx;
}

.content .add-cont-info .add-itemed {
  font-size: 28rpx;
  letter-spacing: 0px;
  color: #333333;
  padding: 0 40rpx;
  height: 68rpx;
  line-height: 68rpx;
  display: inline-block;
  position: relative;
  margin-right: 24rpx;
  margin-bottom: 24rpx;
  background-color: #ffffff;
	box-shadow: 0px 5px 12px 0px 
		rgba(0, 0, 0, 0.1);
}
.content .add-cont-info .add-itemed.notactive{
  color: #999999;
  background-color: #f4f4f4;
}
.name .ts {
  font-size: 24rpx;
  color: #999999;
  margin-left: 15rpx;
}

.error-text {
  font-size: 24rpx;
  color: #333;
  display: block;
  margin-bottom: 40rpx;
  width: 100%;
  text-align: center;
}
.loginbtn{
  display:block;
  width:250rpx;
  height:56rpx;
  border:solid 2rpx #333;
  font-size:24rpx;
  margin:auto;
  text-align:center;
  line-height:56rpx;
  margin-bottom: 32rpx;
}