page {
  width: 100%;
  background-color: #f4f4f4;
  padding-top: 144rpx;
}

.container {
  display: flex;
  flex-direction: column;
}

.user_info {
  position: relative;
}

.bg {
  width: 750rpx;
  height: 234rpx;
  position: absolute;
  z-index: -1;
}

.user_cont {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 234rpx;
}

.user-handimg {
  width: 128rpx;
  height: 128rpx;
  border: 2px solid #fff;
  border-radius: 50%;
  margin-left: 30rpx;
}

.login_btn {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: transparent;
  font-size: 40rpx;
  font-weight: 800;
  color: #fff;
  margin: 34rpx 0rpx;
}

.login_btn::after {
  border: 0;
}

.user {
  margin-left: 30rpx;
}

.username {
  color: #fff;
  font-size: 40rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.userlevel {
  display: inline-block;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background-color: rgba(72, 116, 193, 0.8);
  color: #fff;
  font-size: 20rpx;
}

.action_list {
  display: flex;
  flex-direction: column;
  /* height: 1006rpx; */
  background-color: #f4f4f4;
  overflow: hidden;
}

.icon_begin {
  width: 44rpx;
  height: 44rpx;
  margin: 0rpx 30rpx;
}

.phone {
  width: 30rpx;
  height: 40rpx;
  margin: 0rpx 35rpx;
}

.list_item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 92rpx;
  width: 750rpx;
  background: #fff;
}

.arrow {
  width: 16rpx;
  height: 34rpx;
  margin-right: 30rpx;
}

.text_con {
  width: 659rpx;
  height: 92rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f4f4f4;
}

.text_con view {
  font-size: 30rpx;
}

.interval {
  width: 750rpx;
  height: 24rpx;
  background-color: #f4f4f4;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 9999;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.content {
  width: 500rpx;
  padding: 4rpx 4rpx 32rpx 4rpx;
  background-color: #fff;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
}
.closeerweima{
  width: 64rpx;
  height: 64rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.close_mask {
  width: 100%;
  display: flex;
  justify-content: flex-end;
}

.close_mask_img {
  width: 32rpx;
  height: 32rpx;
  margin: 0 auto;
}

.mask_logo {
  display: flex;
  justify-content: center;
}

.mask_logo_img {
  width: 100rpx;
  height: 100rpx;
}

.describe {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 48rpx;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.share_cont {
  font-size: 28rpx;
  line-height: 42rpx;
  padding: 0rpx 32rpx;
}

.share {
  width: 420rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #4284f7;
  margin: 0 auto;
  text-align: center;
  margin-top: 30rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 0rpx;
  box-shadow: 0px 3px 11.96px 1.04px rgba(66, 132, 247, 0.34);
}

.maskTwo {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 9999;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.addDesk {
  width: 632rpx;
  height: 740rpx;
  margin: 0 auto;
}

.addDesk image {
  width: 632rpx;
  height: 740rpx;
}

.know {
  position: relative;
  width: 567rpx;
  height: 88rpx;
  /* background-color:#000;  */
  top: -132rpx;
  left: 34rpx;
}

.advice {
  width: 600rpx;
  height: 92rpx;
  line-height: 92rpx;
  background-color: #fff;
  font-size: 30rpx;
  padding: 0rpx;
  text-align: left;
}

.advice::after {
  border: none;
}
