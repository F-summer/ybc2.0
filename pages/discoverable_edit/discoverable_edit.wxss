/* client/pages/1_1/discoverable_edit/discoverable_edit.wxss */
.content{
  padding-bottom: 100rpx;
  overflow-x: hidden;
  padding-top: 164rpx;
}
.title-module{
  padding:0 32rpx;
  font-size: 34rpx;
	color: #333333;
  margin-bottom: 34rpx;
  display: block;
  font-weight: bolder;
}
.tishi{
  font-size: 24rpx;
	color: #999999;
  padding-left: 14rpx;
}
.btn-cont{
  position: fixed;
  bottom: 25rpx;
  padding: 0 32rpx;
  right: 0;
  left: 0;
}
.addCont {
  display: block;
	width:100%;
	height: 88rpx;
	background-color: #4284f7;
	box-shadow: 0px 3px 12px 1px 
		rgba(66, 132, 247, 0.34);
	border-radius: 8rpx;
  font-size: 30rpx;
	line-height: 88rpx;
  text-align: center;
	color: #ffffff;
}
.gz{
  padding:0 32rpx;
  display: table;
  margin-right: -60rpx;
  position: relative;
}
.gz .type-item{
  margin-right: 24rpx;
  float: left;
  margin-bottom: 40rpx;
  width: 153rpx;
	height: 186rpx;
	background-color: #f8f8f8;
	border-radius: 8rpx;
  padding:24rpx 0;
  position: relative;
}
.gz .type-item .del{
  position: absolute;
  width: 32rpx;
	height: 32rpx;
  border-radius: 50%;
  top: -16rpx;
  right: -16rpx;
}
.gz .type-item .logo-img{
  width: 96rpx;
	height: 96rpx;
	background-color: #f4f4f4;
  border-radius: 50%;
  overflow: hidden;
  border: 3rpx solid #e7eeff;
  margin: auto;
}
.gz .type-item .logo-img .img{
  width: 100%;
	height: 100%;
  display: block;
  margin: auto;
}
.gz .type-item .text{
  font-size: 22rpx;
	color: #333333;
  display: block;
  margin-top: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}
.gz .edit-btn{
  position: absolute;
  right: 0;
  top: 0;
  width: 136rpx;
	height: 56rpx;
	background-color: #ffffff;
	border: solid 2rpx #333333;
  font-size: 24rpx;
	line-height: 56rpx;
	color: #333333;
}
.recmmend{
  padding-left:32rpx;
}
.type-content{
  margin-right:-20rpx;
}
.ts-text{
  font-size: 26rpx;
  color: #333;
  display: block;
  text-align: center;
  width: 100%;
  line-height: 50rpx;
}
.jiange{
  width: 100%;
  height: 4rpx;
  background-color: #f4f4f4;
  margin-bottom: 20rpx;
}
button::after{
  border: none;
}