/* pages/collect_index/collect_index.wxss */
.content{
  padding-top: 144rpx;
}
.list-content {
  position: fixed;
  top: 250rpx;
  width: 100%;
  padding: 32rpx;
  background: #fff;
  height: 100%;
  border-radius: 32px 32px 0px 0px;
  overflow: scroll;
  padding-bottom: 200rpx;
}

.list-content .list-item {
  padding: 32rpx 0;
  border-bottom: solid 1rpx #ebebeb;
  overflow: hidden;
  position: relative;
}

.list-content .list-item .left {
  float: left;
  margin-right: 34rpx;
  width: 110rpx;
  height: 96rpx;
}

.list-content .list-item .right {
  display: table;
}

.list-content .list-item .text {
  display: block;
}

.list-content .list-item .name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: bolder;
}

.list-content .list-item .collect-num {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.list-content .list-item .collect-num .num {
  font-size: 24rpx;
  color: #4284f7;
}

.list-content .list-item .collect-time {
  font-size: 22rpx;
  color: #999;
}
.img-cont{
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  width: 80rpx;
  height: 80rpx;
}
.edit-btn {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  width: 40rpx;
  height: 8rpx;
}

.edit-alt {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
}

.edit-alt .alt-box {
  position: absolute;
  bottom: 0;
  width: 100%;
  left: 0;
  height: 364rpx;
  background: #f4f4f4;
}

.edit-alt .alt-box .show-msg {
  padding: 40rpx 0;
  background: #fff;
}

.edit-alt .alt-box .title {
  display: block;
  text-align: center;
  margin-bottom: 32rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.edit-alt .alt-box .optionaction {
  padding: 0 150rpx;
  overflow: hidden;
}
.edit-alt .alt-box .optionaction .type.left {
  float: left;
}

.edit-alt .alt-box .optionaction .type.right {
  float: right;
}

.edit-alt .alt-box .optionaction .type .icon {
  width: 80rpx;
  height: 80rpx;
  display: block;
}

.edit-alt .alt-box .optionaction .type .text {
  display: block;
  font-size: 24rpx;
  color: #333;
  text-align: center;
  margin-top: 16rpx;
}
.edit-alt .alt-box .cancel{
  position: absolute;
  bottom: 0;
  border: none;
	height: 88rpx;
	background-color: #ffffff;
  display: block;
  width: 100%;
  font-size: 30rpx;
	color: #333333;
  line-height: 88rpx;
}
button::after{ border: none; }
.rename-alt{
  position: absolute;
  width: 620rpx;
	height: 310rpx;
	background-color: #ffffff;
  left: 50%;
  margin-left: -310rpx;
  top: 50%;
  margin-top: -155rpx;
}
.rename-alt .btn-cont{
  position: absolute;
  bottom: 0;
  width: 100%;
  border-top: 1rpx solid #ebebeb;
  height: 88rpx;
}
.rename-alt .btn-cont .btn{
  width: 50%;
  font-size: 28rpx;
	color: #4284f7;
  line-height: 88rpx;
  text-align: center;
  float: left;
}
.rename-alt .btn-cont .btn.cancel{
  border-right: 1rpx solid #ebebeb;
}
.rename-alt .title{
  display: block;
  font-size: 30rpx;
	color: #333333;
  padding: 40rpx 0;
  text-align: center;
  font-weight: bold;
}
.rename-alt .inp{
  width: 556rpx;
	height: 72rpx;
	background-color: #f4f4f4;
  margin: auto;
  display: block;
  font-size: 28rpx;
	color: #333333;
  padding: 0 24rpx;
  box-sizing: border-box;
}
.del-alt{
  position: absolute;
  width: 586rpx;
	border-radius: 16px;
  left: 50%;
  margin-left: -293rpx;
  top: 50%;
  margin-top: -145rpx;
}
.del-alt .conent{
  width: 100%;
  background: #fff;
  font-size: 30rpx;
	color: #4284f7;
  text-align: center;
  border-radius: 16px;
}
.del-alt .conent .text{
  line-height: 88rpx;
  display: block
}
.del-alt .conent .text.borderb{
  border-bottom: 1rpx solid #ebebeb;
}

.del-alt .cancel{
  font-size: 30rpx;
	color: #333333;
  text-align: center;
  line-height: 88rpx;
	height: 88rpx;
	background-color: #ffffff;
	border-radius: 16rpx;
  margin-top: 24rpx;
}