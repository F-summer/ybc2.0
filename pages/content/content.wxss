/* pages/1_0/content/content.wxss */
@import "../../wxParse/wxParse.wxss";
page{
  padding: 0 32rpx;
  box-sizing: border-box;
  padding-bottom: 250rpx;
}
.title {
  font-size: 42rpx;
  line-height: 57rpx;
  font-family: "PingFangSC";
  color: rgb(51, 51, 51);
  padding: 20rpx 0;
  font-weight: bold;
}

.account-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.account-name {
  font-size: 28rpx;
  color: rgb(51, 51, 51);
}

.date {
  font-size: 24rpx;
  color: rgb(153, 153, 153);
  margin-left: 32rpx;
}

.bottom {
  position: fixed;
  bottom: 0rpx;
  left: 0;
  width: 750rpx;
  height: 100rpx;
   background-color: white; 
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-top: 1px solid #ebebeb;
}

.bottom-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
  font-family: "PingFangSC";
  color: rgb(153, 153, 153);
}

.bottom-item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.btn {
  margin: 0;
  background-color: transparent;
}

.btn::after {
  border: none;
}
view.wxParse-p{
  font-size: 34rpx;
  line-height: 50rpx;
  color: #333;
  text-align: justify;
  text-justify:inter-ideograph;
  text-indent:34rpx;
}
image{
  display: block;
  width: 100%;
  margin: auto;
}
.wxParse-section{
  margin-top: 74rpx;
}
.WxEmojiView{
  margin: 30rpx 0;
}
.accountImg{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 15rpx;
}
.account-msg{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.not-like{
  width: 36rpx;
	height: 26rpx;
  margin: 0;
}
.bottom-text{
  font-size: 28rpx;
  color: #999;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  line-height: 36rpx;
}
.loading{
  position: fixed;
  top: 50%;
  left: 50%;
  margin-left: -92rpx;
  margin-top: -60rpx;
  width: 184rpx;
  height: 120rpx;
}
.loading .loading-img{
 width: 100%;
 height: 100%;
}
.bottom-title{
  font-size: 28rpx;
  color: #333;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  border-top:1px solid #ebebeb; 
  padding-top:32rpx; 
}
.box{
  width: 686rpx;
	height: 110rpx;
	background-color: #4284f7;
	box-shadow: 0px 4rpx 5.5rpx 0.5rpx 
		rgba(66, 132, 247, 0.24);
	border-radius: 16rpx;
  position: fixed;
  bottom: 124rpx;
  left: 32rpx;
  padding: 0 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.box .del{
  width: 24rpx;
  height: 24rpx;
  margin: 0;
  margin-right: 24rpx;
}
.box .logo-cont{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 1;
}
.box .logo-cont .logo{
  width: 70rpx;
	height: 70rpx;
	background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  margin: 0;
}
.box .logo-cont .right{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-left: 16rpx;
  flex: 1;
}
.box .logo-cont .right .see{
  display: flex;
  flex-direction: column;
}
.box .logo-cont .right .see .tit{
  font-size: 30rpx;
  font-weight: bold;
	color: #ffffff;
}
.box .logo-cont .right .see .msg{
  font-size: 24rpx;
	color: #ffffff;
  margin-top: 10rpx;
}
.box .logo-cont .right .btn{
  width: 144rpx;
	height: 54rpx;
	background-color: #689df9;
	border-radius: 8rpx;
  color: #fff;
  font-size: 28rpx;
  line-height:54rpx;
  padding: 0;
}
.conpage{
  padding-top:144rpx;
}
.next_content{
  width: 150rpx;
	height: 64rpx;
	background-color: #ffffff;
	box-shadow: 0px 4rpx 9.9rpx 0.1rpx 
		rgba(0, 0, 0, 0.16);
	border-radius: 32rpx;
  position: fixed;
  right: 32rpx;
  bottom: 170rpx;
  font-size: 30rpx;
	color: #4284f7;
  text-align: center;
  line-height: 64rpx;
  padding: 0;
}