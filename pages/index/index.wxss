.nav {
  background: #fff;
  top: 72px;
  left: 0;
  width: 100%;
  position: fixed;
  z-index: 9999;
  height: 88rpx;
  border-bottom: 1rpx solid #ebebeb;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
}

.nav-cont {
  width: 100%;
  height: 88rpx;
  display: inline-block;
  vertical-align: middle;
}

.nav-cont .list-info {
  font-size: 0;
  padding-right: 60rpx;
  white-space: nowrap;
  display: inline-block;
  padding-left: 32rpx;
}

.nav-cont .list-info .list-item {
  display: inline-block;
  font-size: 34rpx;
  color: #333;
  margin-right: 48rpx;
  line-height: 88rpx;
  background: transparent;
  padding: 0;
}

.lm_icon {
  width: 38rpx;
  height: 38rpx;
  margin-left: 32rpx;
  vertical-align: middle;
  margin-right: 32rpx;
}

.nav-cont .list-info .list-item.active {
  font-size: 34rpx;
  color: #4284f7;
  font-weight: bold;
  position: relative;
}

.nav-cont .list-info .list-item.active::before {
  content: "";
  position: absolute;
  bottom: 10rpx;
  height: 4rpx;
  background-color: #4284f7;
  border-radius: 2rpx;
  left: 12rpx;
  right: 12rpx;
}

.nav .lm {
  position: absolute;
  right: 0;
  top: 0;
  width: 110rpx;
  bottom: 0;
  background-image: linear-gradient(90deg, rgba(255, 255, 255, 0.4) 10%, rgba(255, 255, 255, 0.6) 20%, rgba(255, 255, 2555, 1) 30%);
  display: block;
}

.nav .lm .icon {
  width: 38rpx;
  height: 38rpx;
  display: block;
  margin-top: 25rpx;
  position: absolute;
  right: 32rpx;
}

.subscription-alt {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: #fff;
  z-index: 100000000;
}

.noMsgimg {
  position: absolute;
  width: 394rpx;
  height: 332rpx;
  margin: auto;
  top: 50%;
  left: 50%;
  margin-left: -187rpx;
  margin-top: -166rpx;
}

.search-cont {
  width: 100%;
  background: #4284f7;
  padding: 24rpx 0;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}

.search-cont .search-top {
